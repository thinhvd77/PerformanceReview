{
  "openapi": "3.0.3",
  "info": {
    "title": "Performance Review Form Management API",
    "version": "1.0.0",
    "description": "API documentation for the Performance Review Form Management backend"
  },
  "servers": [
    { "url": "http://localhost:5000", "description": "Local" }
  ],
  "paths": {
    "/health": {
      "get": {
        "summary": "Health check",
        "tags": ["System"],
        "responses": {
          "200": {
            "description": "Server is running",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {"type": "string"},
                    "message": {"type": "string"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/users/register": {
      "post": {
        "summary": "Register a new user",
        "tags": ["Users"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {"type": "string"},
                  "password": {"type": "string", "format": "password"}
                },
                "required": ["username", "password"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "User registered" },
          "400": { "description": "Validation error" }
        }
      }
    },
    "/api/users/login": {
      "post": {
        "summary": "Login a user",
        "tags": ["Users"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {"type": "string"},
                  "password": {"type": "string", "format": "password"}
                },
                "required": ["username", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {"type": "string"}
                  }
                }
              }
            }
          },
          "401": { "description": "Invalid credentials" }
        }
      }
    },
    "/api/users/profile": {
      "get": {
        "summary": "Get current user profile",
        "tags": ["Users"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Profile data" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/api/files/upload": {
      "post": {
        "summary": "Upload an Excel file and generate a form schema",
        "tags": ["Files"],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": { "type": "string", "format": "binary" }
                },
                "required": ["file"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Schema generated and saved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {"type": "string"},
                    "formTemplate": {
                      "type": "object",
                      "properties": {
                        "id": {"type": "integer"},
                        "name": {"type": "string"},
                        "schema": {
                          "type": "object",
                          "properties": {
                            "title": {"type": "string"},
                            "fields": {
                              "type": "array",
                              "items": {
                                "type": "object",
                                "properties": {
                                  "key": {"type": "string"},
                                  "label": {"type": "string"},
                                  "type": {"type": "string", "enum": ["string", "number", "date", "boolean", "select"]},
                                  "required": {"type": "boolean"},
                                  "options": {"type": "array", "items": {"type": "string"}},
                                  "order": {"type": "integer"}
                                }
                              }
                            }
                          }
                        },
                        "createdAt": {"type": "string", "format": "date-time"},
                        "updatedAt": {"type": "string", "format": "date-time"}
                      }
                    },
                    "previewData": {"type": "array", "items": {"type": "object"}}
                  }
                }
              }
            }
          },
          "400": { "description": "Upload error" }
        }
      }
    },
    "/api/forms": {
      "get": {
        "summary": "List form templates",
        "tags": ["Forms"],
        "responses": {
          "200": {
            "description": "List of form templates",
            "content": {
              "application/json": {
                "schema": { "type": "array", "items": {"type": "object"} }
              }
            }
          }
        }
      }
    },
    "/api/forms/{id}": {
      "get": {
        "summary": "Get a form template by id",
        "tags": ["Forms"],
        "parameters": [
          {"name": "id", "in": "path", "required": true, "schema": {"type": "integer"}}
        ],
        "responses": {
          "200": {"description": "Form template"},
          "404": {"description": "Not found"}
        }
      }
    },
    "/api/records/export-record": {
        "get": {
            "summary": "Export form records to Excel",
            "tags": ["Records"],
            "responses": {
            "200": {
                "description": "Excel file"},
            "400": {"description": "Bad request"},
            "404": {"description": "Not found"}
            }
        }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}